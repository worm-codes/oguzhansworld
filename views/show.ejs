<%-include("partials/header") %>

<style>
  #body{
    width:666px; 
    
    word-wrap:break-word; /*fazla geleni alt satira atiyo*/
	line-height: 2em;
}
	.text{
		line-height: 4em;
	}
	
	
	
	
	
</style>
<div class="ui main text container segment">
	<div class="ui huge header text-center">
		<%=blogs.title%>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui mb-3 centered rounded image" src="<%=blogs.image%>">
			<div class="content mb-3">
			<span><%=blogs.created.toDateString()%></span>
		</div>
			<div class="description">
				<p id="body">
					<!-- tire kullanmasmizin sebebi adam </strong> tagi girerse onu html e yazmasin calistirsin yazi kalin olsun -->
					<%-blogs.body%>
				</p>
			</div>
		</div>
		
	</div>
	
	<a class="ui inverted inverse blue big button" href="/blogs">Home</a>
	<% if(currentUser && currentUser.equals(blogs.author.id)){%>
	<a class="ui inverted  green big button" href="/blogs/<%=blogs._id%>/edit">Edit</a>
	<form method="POST" action="/blogs/<%=blogs._id%>?_method=DELETE" style="display:inline">
		<button class="ui inverted blue red  button"><i class="trash alternate icon"></i>Delete</button>
	</form>
	<%}%>
	<hr class="my-5">
	<%if(!currentUser){%>
		<p class="text-center">
			You have to <a href="/login">Sign In</a> or <a href="/register">Sign Up</a> to add comment...
	</p>
	
	<%}%>
	
	
	
	<%if(blogs.comments.length>0){%>
	<h1 class="text-center mt-5">
		COMMENTS
	</h1>

	
	<%}%>
	
	
	

	
	<%blogs.comments.forEach(function(comment){%>
	<div class="ui comments">
  <div class="comment mt-5">
	  <a class="avatar">
      <img src="https://semantic-ui.com/images/avatar/small/christian.jpg">
    </a>
    
    <div class="content">
      <a class="author"><%=comment.author.username%></a>
      <div class="metadata">
        <div class="date"><%=comment.created.toDateString()%>
		  
		  
		  </div>
      </div>
      <div class="text">
		  <%-comment.text.substring(0,200)%>
		  
		  
		  
		  

<span class="collapse mb-5" id="more">
    <%-comment.text.substring(200,comment.text.length)%>
</span> 
		  <%if(comment.text.length>200){%>
		  
<span>
	
 <a  href="#more" data-toggle="collapse">
	
	 <p>
		 
	<i class="angle double down icon"></i>More
	 </p><i class="fa fa-caret-down "></i> 
	 
	 
</span>
	
	
	
	<%}%>
		  
  
    
        
      </div>
		<%if(currentUser && currentUser._id.equals(comment.author.id)){%>
				 <span class="float-right">
			<form method="POST" class="float-right" style="display:inline;" action="/blogs/<%=blogs._id%>/comments/<%=comment._id%>?_method=DELETE">
			   		
      <button style="display:inline; color:white;" class="mini ui float-right  red button">DELETE</button>
   
	</form>					  
			<button style="display:inline" class="mini ui float-right green button" href="/campgrounds/<%=blogs._id%>/comments/<%=comment._id%>/edit">EDIT</button>
					  
			
			</span>
				 <%}%>	
    </div>
  </div>
		<%})%>
	  
	  
	  
 <%if(currentUser){%>
  <form class="ui reply mt-5 form" action="/blogs/<%=blogs._id%>/comments" method="POST">
    <div class="field">
		
      <textarea pattern=".{8,500}" required title="Eight or more characters" name="text"></textarea>
    </div>
    <button class="ui primary submit labeled icon button">
      <i class="icon edit"></i> Add Comment
    </button>
  </form>
</div>
	<%}%>
	
	
	
</div>


	
	 

<%-include("partials/footer") %>